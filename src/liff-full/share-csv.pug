extends /liff-full/share

block vue-config
  script.
    /* global getCsv */
    const cfg = window.vueConfig
    cfg.computed.shortcut = function () {
      return `https://liff.line.me/#{liffidFull}/share-csv.html${new URL(location).search}`
    }
    cfg.methods.getVcard = async function () {
      try {
        const args = _.fromPairs(_.map(['csv', 'key', 'value'], k => [k, this.paramBase64url(k)]))
        this.vcard = _.find(await getCsv(args.csv), [args.key, args.value])
        window.gtagTiming('after getVcard')
      } catch (err) {
        err.message = err.message ? `名片資料獲取失敗: ${err.message}` : '名片資料獲取失敗'
        this.render = null
        throw err
      }
    }
